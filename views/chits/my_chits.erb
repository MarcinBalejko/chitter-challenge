        <title>My Chits</title>
    </head>
    <body class="background">
        <!-- Navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">
                <img src="https://img.icons8.com/cute-clipart/64/000000/chat.png">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">My Chits <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                      <form action="/chits" method="get">
                        <input type="submit" class="nav-link" value="Board" style="font-size: 15px; background-color: transparent; border: none;" />
                      </form>
                    </li>
                    <li class="nav-item">
                      <form action="/chits/new" method="get"> 
                        <input type="submit" class="nav-link" value="Add Chit" style="font-size: 15px; background-color: transparent; border: none;" />
                      </form>
                    </li>                   
                    <li class="nav-item">
                      <form action="/sessions/destroy" method="post">
                        <input type="submit" class="nav-link" value="Sign Out" style="font-size: 15px; background-color: transparent; border: none;" />
                      </form>
                    </li>         
                </ul>
            </div>
        </nav>
      <br>
      <br>


      <% if @chits != nil %>
        <% @chits.each do |chit| %>
          <% if chit.author_id == @user.id %>
        <!-- Card holding form-->
            <div class="col-md-4 mx-auto">
                <div class="card mb-3">
                    <h3 class="card-header">(<%= chit.time %>) <%= chit.author_name %> ~ says:</h3>
                    <div class="card-body">
                        <p class="card-text"><%= chit.text %></p>
                    </div>

                    <li class="list-group-item">
                      Comments:
                      <% if chit.comments.length > 0 %>
                        <ul class="comment-style">
                          <% chit.comments.each do |comment| %>
                            <span>
                              <li class="comment-position">   
                                <form action="/chits/<%= comment.id %>/comments" method="post">
                                  <%= comment.comment_author %>~Says: <%= comment.text %>
                                  <input type='hidden' name='_method' value='DELETE' />
                                  <input type="submit" class="submitLink" value="Delete" style="font-size: 20px;"/> 
                                </form>
                              </li>
                            </span>
                          <% end %>
                        </ul>
                      <% end %> 
                    </li>
                    <div class="card-footer text-muted">
                      <div class="card-body" style="display: inline; align-content: center;"> <!-- ? -->
                      <a  href="#" class="card-link">
                        <form action="/chits/<%= chit.id %>/comments/new" method="get">
                          <input type="submit" class="card-link" value="Comment" style="font-size: 20px;"/>
                        </form>
                      </a>
                      <a  href="#" class="card-link">
                        <form action="/chits/<%= chit.id %>/edit" method="get">
                              <input type="submit" class="submitLink" value="Edit" style="font-size: 20px;" />
                        </form>
                      </a>
                      <a  href="#" class="card-link">
                        <form action="/chits/<%= chit.id %>" method="post">
                            <input type='hidden' name='_method' value='DELETE' />
                            <input type="submit" class="submitLink" value="Delete" style="font-size: 20px;" />
                        </form>
                      </a>
                      </div>
                    </div>
                </div>
            </div>
            


